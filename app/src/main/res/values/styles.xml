<resources>

    <style name="AppTheme.base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActivityNoTranslucent">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.blue" parent="AppTheme.base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RedTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
    </style>

    <style name="BrownTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
        <item name="colorAccent">@color/accent_brown</item>
    </style>

    <style name="BlueTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <style name="BlueGreyTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/blue_grey</item>
        <item name="colorPrimaryDark">@color/dark_blue_grey</item>
        <item name="colorAccent">@color/accent_blue_grey</item>
    </style>

    <style name="YellowTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <style name="DeepPurpleTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorPrimaryDark">@color/dark_deep_purple</item>
        <item name="colorAccent">@color/accent_deep_purple</item>
    </style>

    <style name="PinkTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <style name="GreenTheme" parent="AppTheme.base">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--spinner -->
    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
    </declare-styleable>

    <style name="edit_padding">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
</resources>
